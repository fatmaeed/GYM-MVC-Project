@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var classSchedule = ViewBag.ScheduleTable ?? new List<dynamic>();
}
    
<div class="container py-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary-dark text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0 text-white">
                <i class="fas fa-calendar-alt me-2"></i>Weekly Class Schedule
            </h3>
            
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-bordered table-hover mb-0 schedule-table">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th class="text-center" style="width: 120px;">Time</th>
                            <th class="text-center">Monday</th>
                            <th class="text-center">Tuesday</th>
                            <th class="text-center">Wednesday</th>
                            <th class="text-center">Thursday</th>
                            <th class="text-center">Friday</th>
                            <th class="text-center">Saturday</th>
                            <th class="text-center">Sunday</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var row in classSchedule)
                        {
                            <tr>
                                <td class="fw-bold text-center bg-light">@row.Time</td>
                                <td class="schedule-cell">@row.Monday</td>
                                <td class="schedule-cell">@row.Tuesday</td>
                                <td class="schedule-cell">@row.Wednesday</td>
                                <td class="schedule-cell">@row.Thursday</td>
                                <td class="schedule-cell">@row.Friday</td>
                                <td class="schedule-cell">@row.Saturday</td>
                                <td class="schedule-cell">@row.Sunday</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
