@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel - @ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true">
    @RenderSection("Styles", required: false)

</head>
<body>
    <div class="admin-container">
        <!-- Sidebar Navigation -->
        <nav class="admin-sidebar">
            <div class="sidebar-header">
                <div class="logo-wrapper">
                    <i class="fas fa-dumbbell logo-icon"></i>
                    <h3 class="logo-text">Fitness Admin</h3>
                </div>
            </div>
            <div class="sidebar-menu">
                <div class="menu-title">Main</div>
                <a href="/Admin/Dashboard" class="menu-item active">
                    <i class="fas fa-home"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/Trainer/GetAll" class="menu-item">
                    <i class="fas fa-user-tie"></i>
                    <span>Trainers</span>
                </a>
                <a href="/Member/Index" class="menu-item">
                    <i class="fas fa-users"></i>
                    <span>Members</span>
                </a>

                <div class="menu-title">Management</div>
                <a href="/Schedule/Index" class="menu-item">
                    <i class="fas fa-calendar-alt"></i>
                    <span>Schedules</span>
                </a>
                <a href="/Membership/Index" class="menu-item">
                    <i class="fas fa-id-card"></i>
                    <span>Memberships</span>
                </a>
            </div>
            <a class="menu-item text-start" href="/Account/Logout">
                <i class="fas fa-sign-out-alt me-1"></i> Logout
            </a>


            <div class="sidebar-footer">
                <div class="d-flex align-items-center">
                    <div class="avatar me-3">
                        <i class="fas fa-user-circle"></i>
                    </div>
                    <div>
                        <div class="fw-bold">@HttpContextAccessor.HttpContext.User.Identity?.Name</div>
                        <small class="text-muted">Admin</small>
                    </div>

                </div>
            </div> 
        </nav>



      



        <!-- Main Content Area -->
        <main class="admin-main bg-white">
            <div class="main-content">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.menu-item').removeClass('active');

            var path = window.location.pathname;

            $('.menu-item').each(function() {
                if (this.pathname === path) {
                    $(this).addClass('active');
                }
            });

            if (path === '/' || path === '/Admin/Dashboard') {
                $('.menu-item[href="/Admin/Dashboard"]').addClass('active');
            }
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>