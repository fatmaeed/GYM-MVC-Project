@model GYM_MVC.ViewModels.MembershipViewModels.UpdateMembershipViewModel
@{
    ViewData["Title"] = "Update Membership";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary-dark text-white d-flex justify-content-between align-items-center">
            <h3 class="card-title mb-0">
                <i class="fas fa-id-card-alt me-2"></i>Update Membership
            </h3>
            <a asp-action="Index" class="btn btn-outline-light btn-sm">
                <i class="fas fa-arrow-left me-1"></i> Back to List
            </a>
        </div>

        <div class="card-body">
            <form asp-action="Update" class="row g-4">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    <h5 class="alert-heading">
                        <i class="fas fa-exclamation-circle me-2"></i>Please fix the following errors
                    </h5>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                      @*   <select asp-for="SelectedMembershipType" class="form-select" asp-items="Model.MembershipTypeList">
                            <option value="">-- Select Membership Type --</option>
                        </select> *@
                        <input asp-for="SelectedMembershipType" class="form-control" />
                        <label asp-for="SelectedMembershipType" class="fw-semibold"></label>
                        <span asp-validation-for="SelectedMembershipType" class="text-danger small"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Price" class="form-control" placeholder=" " />
                        <label asp-for="Price" class="fw-semibold"></label>
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="DurationInDays" class="form-control" placeholder=" " />
                        <label asp-for="DurationInDays" class="fw-semibold"></label>
                        <span asp-validation-for="DurationInDays" class="text-danger small"></span>
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-floating">
                        <textarea asp-for="Description" class="form-control" placeholder=" " style="height: 120px"></textarea>
                        <label asp-for="Description" class="fw-semibold"></label>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                </div>

                <div class="col-12">
                    <div class="d-flex justify-content-end gap-3">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i> Save Changes
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
