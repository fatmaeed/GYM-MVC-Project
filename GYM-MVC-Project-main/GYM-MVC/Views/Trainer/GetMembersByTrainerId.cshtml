@using GYM_MVC.ViewModels
@using GYM_MVC.ViewModels.TrainerViewModels

@model List<MemberByTrainerIdVM>
@{
    ViewBag.Title = "Members List";
    Layout = "~/Views/Shared/_TrainerLayout.cshtml";
}

<div class="container-fluid px-4 py-4 bg-white">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-primary-dark text-white">
                                <tr>
                                    <th class="ps-4 text-white">Name</th>
                                    <th class="text-white">Age</th>
                                    <th class="text-white">Marital Status</th>
                                    <th class="text-end pe-4 text-white">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var member in Model)
                                {
                                    <tr class="border-bottom">
                                        <td class="ps-4 fw-bold">@member.Name</td>
                                        <td>@member.Age</td>
                                        <td>
                                                @member.MaritalStatus
                                        </td>
                                        <td class="text-end pe-4">
                                            <a class="btn btn-sm btn-outline-primary-dark rounded-pill px-3"
                                               asp-controller="Trainer"
                                               asp-action="GetMemberWithWorkoutPlans"
                                               asp-route-id="@member.Id">
                                                <i class="fas fa-eye me-1"></i> View Details
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>