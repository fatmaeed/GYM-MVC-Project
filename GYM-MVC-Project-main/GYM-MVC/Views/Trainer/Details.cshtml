@model GYM_MVC.ViewModels.TrainerViewModels.DisplayTrainerVM

@{
    ViewData["Title"] = "Trainer Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary-dark text-white d-flex justify-content-between align-items-center">
            <h3 class="text-white"><i class="fas fa-user me-2"></i>@Model.Name's Details</h3>
            <a asp-action="GetAll" class="btn btn-light">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>

        <div class="card-body row">
            <div class="col-md-4 text-center">
                <img src="@Model.ImagePath" alt="@Model.Name"
                     class="img-thumbnail rounded" style="max-height: 250px;"
                     onerror="this.onerror=null;this.src='https://via.placeholder.com/250';">
            </div>

            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4">Specialty</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-info">@Model.Specialty</span>
                    </dd>

                    <dt class="col-sm-4">Salary</dt>
                    <dd class="col-sm-8 text-success fw-bold">
                        $@Model.Salary.ToString("N0")
                    </dd>

                    <dt class="col-sm-4">Bio</dt>
                    <dd class="col-sm-8">@Model.Bio</dd>
                </dl>

                <div class="mt-4 d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
