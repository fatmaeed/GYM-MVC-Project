@using GYM_MVC.ViewModels.TrainerViewModels
@model List<DisplayTrainerVM>
@{
    ViewData["Title"] = "All Trainers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header bg-primary-dark d-flex justify-content-between">
        <h2 class="card-title">All Trainers</h2>
        <a asp-action="RegisterTheTrainer" asp-controller="Account" class="btn btn-light">
            <i class="fas fa-plus"></i> Add New Trainer
        </a>
    </div>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Photo</th>
                    <th>Name</th>
                    <th>Specialty</th>
                    <th>Salary</th>
             

                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var trainer in Model)
                {
                    <tr>
                        <td>
                            <img src="@trainer.ImagePath" alt="@trainer.Name" style="width: 50px; height: 50px; border-radius: 50%; object-fit: cover;">
                        </td>
                        <td>@trainer.Name</td>
                        <td>@trainer.Specialty</td>
                        <td>@trainer.Salary </td>
                     
                        <td>
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@trainer.Id" class="btn btn-outline text-info">
                                    <i class="fas fa-edit"></i>

                                </a>
                                <a asp-action="Delete" asp-route-id="@trainer.Id" class="btn btn-outline text-danger">
                                    <i class="fas fa-trash"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@trainer.Id" class="btn btn-outline text-warning">
                                    <i class="fas fa-eye"></i>
                                </a>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>