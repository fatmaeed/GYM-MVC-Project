@using GYM_MVC.ViewModels
@using GYM_MVC.ViewModels.TrainerViewModels

@model DisplayMemberWithWorkoutPlansVM;

@{
    ViewData["Title"] = "Member Details";
    Layout = "~/Views/Shared/_TrainerLayout.cshtml";
}

<style>
    .btn-primary-dark {
        background-color: var(--primary-dark);
        border-color: var(--primary-dark);
        color: white;
        transition: all 0.2s ease;
    }

    .btn-primary-dark:hover {
        background-color: #e8414c;
        border-color: #e8414c;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .btn-primary-dark:active {
        transform: translateY(0);
        box-shadow: none;
    }

    .member-photo {
        max-height: 300px;
        width: 100%;
        object-fit: cover;
        margin-bottom: 1.5rem;
        border: 3px solid var(--light);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
    }

    .workout-card {
        border: none;
        transition: transform 0.3s ease;
        border-radius: 0.5rem;
    }

    .workout-card:hover {
        transform: translateY(-5px);
    }

    .detail-list dt {
        font-weight: 600;
        color: var(--dark);
    }

    .detail-list dd {
        margin-bottom: 0.5rem;
    }

    .badge-status {
        font-size: 0.85rem;
        padding: 0.35rem 0.75rem;
    }

    .empty-state {
        border: 2px dashed var(--light);
        border-radius: 0.5rem;
    }
</style>

<div class="container-fluid px-4 py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary-dark text-white py-3">
                    <h2 class="mb-0"><i class="fas fa-user me-2"></i>Member Details: @Model?.Name</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <img src="@Model?.ImagePath" class="member-photo rounded" alt="Member Photo" />
                        </div>

                        <div class="col-md-8">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="p-3 bg-light rounded">
                                        <h5 class="text-primary-dark mb-3"><i class="fas fa-info-circle me-2"></i>Personal Information</h5>
                                        <dl class="row detail-list">
                                            <dt class="col-sm-5">Age:</dt>
                                            <dd class="col-sm-7">@Model?.Age</dd>

                                            <dt class="col-sm-5">Weight:</dt>
                                            <dd class="col-sm-7">@Model?.Weight kg</dd>

                                            <dt class="col-sm-5">Height:</dt>
                                            <dd class="col-sm-7">@Model?.Height cm</dd>

                                            <dt class="col-sm-5">Marital Status:</dt>
                                            <dd class="col-sm-7">
                                                <span class="badge badge-status @(Model?.MaritalStatus == "Single" ? "bg-info" : "bg-warning")">
                                                    @Model?.MaritalStatus
                                                </span>
                                            </dd>
                                        </dl>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="p-3 bg-light rounded">
                                        <h5 class="text-primary-dark mb-3"><i class="fas fa-heartbeat me-2"></i>Health Information</h5>
                                        <dl class="row detail-list">
                                            <dt class="col-sm-5">Illnesses:</dt>
                                            <dd class="col-sm-7">@(string.IsNullOrEmpty(Model?.Illnesses) ? "None" : Model.Illnesses)</dd>

                                            <dt class="col-sm-5">Injuries:</dt>
                                            <dd class="col-sm-7">@(string.IsNullOrEmpty(Model?.Injuries) ? "None" : Model.Injuries)</dd>

                                            <dt class="col-sm-5">Sleep Hours:</dt>
                                            <dd class="col-sm-7">@Model?.SleepHours hrs/day</dd>

                                            <dt class="col-sm-5">Available Days:</dt>
                                            <dd class="col-sm-7">@Model?.AvailableDays</dd>
                                        </dl>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h3 class="mb-0 text-primary-dark"><i class="fas fa-dumbbell me-2"></i>Workout Plans</h3>
                        <a class="btn btn-primary-dark rounded-pill px-4" 
                           asp-controller="WorkoutPlan" 
                           asp-action="Create" 
                           asp-route-memberId="@Model?.Id">
                           <i class="fas fa-plus me-2"></i>Add Plan
                        </a>
                    </div>

                    @if (Model?.WorkoutPlan?.Any() == true)
                    {
                        <div class="row row-cols-1 row-cols-md-2 g-4">
                            @foreach (var plan in Model.WorkoutPlan)
                            {
                                if (!plan.IsDeleted)
                                {
                                    <div class="col">
                                        <div class="card h-100 workout-card shadow-sm">
                                            <div class="card-header bg-light">
                                                <h5 class="card-title mb-0 text-dark"><i class="fas fa-clipboard-list me-2"></i>@plan.Name</h5>
                                            </div>
                                            <div class="card-body">
                                                <p class="card-text">@plan.Description</p>
                                                <div class="d-flex justify-content-between mb-3">
                                                    <div>
                                                        <small class="text-muted"><i class="far fa-calendar-alt me-1"></i><strong>Start:</strong> @plan.StartDate.ToString("MMM dd, yyyy")</small>
                                                    </div>
                                                    <div>
                                                        <small class="text-muted"><i class="far fa-calendar-alt me-1"></i><strong>End:</strong> @plan.EndDate.ToString("MMM dd, yyyy")</small>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="card-footer bg-white border-0 d-flex justify-content-between">
                                                <a class="btn btn-sm btn-primary" asp-action="Index" asp-controller="Exercise" asp-route-WorkoutPlanId="@plan.Id">
                                                    <i class="fas fa-dumbbell me-1"></i>Exercises
                                                </a>
                                                <div>
                                                    <a class="btn btn-sm btn-info" asp-action="Edit" asp-controller="WorkoutPlan" asp-route-id="@plan.Id">
                                                        <i class="fas fa-edit me-1"></i>Edit
                                                    </a>
                                                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-controller="WorkoutPlan" asp-route-id="@plan.Id">
                                                        <i class="fas fa-trash me-1"></i>Delete
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state text-center py-5">
                            <i class="fas fa-dumbbell fa-3x mb-3 text-muted"></i>
                            <h4 class="text-muted">No workout plans assigned</h4>
                            <p class="text-muted">Click "Add Plan" to create a new workout plan</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>