@model IEnumerable<GYM_MVC.ViewModels.MemberViewModels.MemberViewModel>
@{
    ViewData["Title"] = "Members";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary-dark  text-white d-flex justify-content-between align-items-center">
            <h3 class="card-title mb-0">
                <i class="fas fa-users me-2"></i>Members
            </h3>
            <a asp-action="RegisterTheMemberFromAdmin" asp-controller="Account" class="btn btn-light">
                <i class="fas fa-plus me-1"></i> Add Member
            </a>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th>Name</th>
                            <th>Age</th>
                            <th>Marital Status</th>
                            <th>Weight (kg)</th>
                            <th>Height (cm)</th>
                            <th>Approved</th>
                            <th style="width: 200px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var m in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@m.Name</td>
                                <td>@m.Age</td>
                                <td>@m.MaritalStatus</td>
                                <td>@m.Weight</td>
                                <td>@m.Height</td>
                                <td>
                                    @if (m.IsApproved)
                                    {
                                        <span class="badge bg-success">Approved</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pending</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a asp-action="Details" asp-route-id="@m.Id"
                                           class="btn btn-sm btn-outline-primary" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@m.Id" method="post"
                                              class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to delete this member?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="card-footer text-center text-muted py-4">
                <i class="fas fa-user-slash fa-3x mb-3"></i>
                <h5>No Members Found</h5>
                <p class="mb-0">Click the "Add Member" button to register your first member</p>
            </div>
        }
    </div>
</div>