@using GYM_MVC.ViewModels.AccountViewModels
@model RegisterMemberFromAdmin

@{
    ViewData["Title"] = "Add Member";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4 text-center">Add Member</h2>



<form asp-action="RegisterTheMemberFromAdmin" asp-controller="Account" enctype="multipart/form-data" class="row g-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <partial name="_MemberFormFields" model="Model" />
    <div class="col-12 text-center">
        <button type="submit" class="btn btn-primary px-5">Save</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </div>
</form>
