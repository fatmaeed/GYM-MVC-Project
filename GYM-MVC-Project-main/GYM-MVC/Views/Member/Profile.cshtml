@model GYM_MVC.ViewModels.MemberViewModels.MemberViewModel
@{
    ViewData["Title"] = "My Profile";
    Layout = "_MainLayout";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="section-title animate">
                <i class="fas fa-user-circle me-2"></i>My Profile
                @* <a asp-controller="Member" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-dark btn-sm ms-3">
                    <i class="fas fa-edit me-1"></i>Edit Profile
                </a> *@
            </h2>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card shadow-sm trainer-card animate delay-1">
                <div class="card-body text-center p-4">
                    <div class="trainer-img-placeholder mb-4 rounded-circle" style="width: 150px; height: 150px; margin: 0 auto;">
                        @* <i class="fas fa-user fa-3x"></i> *@
                        <img src="@Model.ImagePath"  width="150px" height="150px" style="border-radius:50%"/>
                    </div>

                    <h3 class="card-title mb-2">@Model.Name</h3>
                    <p class="text-muted mb-3">
                        <i class="fas fa-birthday-cake me-2 "></i>Age: @Model.Age
                    </p>

                    <div class="d-flex justify-content-center gap-3 mb-3">
                        <div class="text-center">
                            <div class="h5 mb-0">@Model.Height</div>
                            <small class="text-muted">cm</small>
                        </div>
                        <div class="vr"></div>
                        <div class="text-center">
                            <div class="h5 mb-0">@Model.Weight</div>
                            <small class="text-muted">kg</small>
                        </div>
                    </div>

                    <hr class="my-3">

                    <div class="d-flex justify-content-center gap-4">
                        <a href="#" >
                            <i class="fas fa-dumbbell fa-lg"></i>
                        </a>
                        <a href="#" >
                            <i class="fas fa-chart-line fa-lg"></i>
                        </a>
                        <a href="#" >
                            <i class="fas fa-calendar-alt fa-lg"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Profile Details -->
        <div class="col-lg-8">
            <div class="card shadow-sm membership-card animate delay-2">
                <div class="card-body p-4">
                    <h4 class="mb-4">
                        <i class="fas fa-info-circle  me-2"></i>
                        Personal Information
                    </h4>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class=" bg-opacity-10 p-2 rounded me-3">
                                    <i class="fas fa-heart "></i>
                                </div>
                                <div>
                                    <h6 class="mb-0 text-muted">Marital Status</h6>
                                    <p class="mb-0">@Model.MaritalStatus</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class=" bg-opacity-10 p-2 rounded me-3">
                                    <i class="fas fa-bed "></i>
                                </div>
                                <div>
                                    <h6 class="mb-0 text-muted">Sleep Hours</h6>
                                    <p class="mb-0">@Model.SleepHours hours/night</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class=" bg-opacity-10 p-2 rounded me-3">
                                    <i class="fas fa-calendar-day "></i>
                                </div>
                                <div>
                                    <h6 class="mb-0 text-muted">Available Days</h6>
                                    <p class="mb-0">@Model.AvailableDays</p>
                                </div>
                            </div>
                        </div>


                    </div>

                    <hr class="my-4">

                    <h4 class="mb-4">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Health Information
                    </h4>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="d-flex align-items-start mb-3">
                                <div class=" bg-opacity-10 p-2 rounded me-3">
                                    <i class="fas fa-bandaid "></i>
                                </div>
                                <div>
                                    <h6 class="mb-0 text-muted">Injuries</h6>
                                    <p class="mb-0">@(string.IsNullOrEmpty(Model.Injuries) ? "None reported" : Model.Injuries)</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="d-flex align-items-start mb-3">
                                <div class=" bg-opacity-10 p-2 rounded me-3">
                                    <i class="fas fa-file-medical "></i>
                                </div>
                                <div>
                                    <h6 class="mb-0 text-muted">Illnesses</h6>
                                    <p class="mb-0">@(string.IsNullOrEmpty(Model.Illnesses) ? "None reported" : Model.Illnesses)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>