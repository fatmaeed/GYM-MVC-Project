@model List<GYM_MVC.ViewModels.ScheduleViewModels.ScheduleViewModel>
@{
    ViewData["Title"] = "All Schedules";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4 bg-white">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary-dark text-white d-flex justify-content-between align-items-center">
            <h3 class="card-title mb-0">
                <i class="fas fa-calendar-alt me-2 "></i>Class Schedules
            </h3>
            <a asp-action="Create" class="btn btn-light">
                <i class="fas fa-plus me-1"></i> Add New Schedule
            </a>
        </div>

        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                    <h5>No Schedules Found</h5>
                    <p class="text-muted">Click the "Add New Schedule" button to create your first schedule</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-dark text-white">
                            <tr>
                                <th>Day</th>
                                <th>Time</th>
                                <th>Class</th>
                                <th style="width: 150px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var schedule in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">@schedule.DayOfWeek</td>
                                    <td>@schedule.Time.ToString("hh\\:mm")</td>
                                    <td>
                                        <span >@schedule.ClassName</span>
                                    </td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a asp-action="Edit" asp-route-id="@schedule.Id"
                                               class="btn btn-sm btn-outline-warning" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@schedule.Id"
                                               class="btn btn-sm btn-outline-danger" title="Delete"
                                               onclick="return confirm('Are you sure you want to delete this schedule?');">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
