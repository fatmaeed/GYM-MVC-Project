@using GYM_MVC.ViewModels.AccountViewModels
@model LoginUserViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_AuthLayout";
}


<div class="auth-card">
    <h1 class="auth-title text-center m-auto">Login</h1>
    <form asp-action="LoginTheUser">
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

        <div class="form-group">
            <label asp-for="UserName" class="form-label">Username</label>
            <input asp-for="UserName" class="form-control" placeholder="Enter your username" />
            <span asp-validation-for="UserName" class="field-validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="field-validation-error"></span>
        </div>

        <div class="form-group" style="text-align: right;">
            <a asp-action="ForgetPassword" class="auth-links">Forgot password?</a>
        </div>

        <button type="submit" class="btn btn-primary">Login</button>

        <div class="auth-links">
            <span>Don't have an account? <a asp-action="Register">Sign up</a></span>
        </div>
    </form>
</div>