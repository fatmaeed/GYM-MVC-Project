@model GYM_MVC.ViewModels.WorkoutPlansViewModels.DisplayWorkoutPlanVM
@{
    ViewData["Title"] = "Delete Workout Plan";
    Layout = "~/Views/Shared/_TrainerLayout.cshtml";
}

<div class="container-fluid px-4 py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-danger text-white py-3">
                    <h2 class="h4 mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Delete Workout Plan</h2>
                </div>
                <div class="card-body p-4 p-md-5">
                    <div class="alert alert-danger">
                        <h4 class="alert-heading"><i class="fas fa-exclamation-circle me-2"></i>Warning!</h4>
                        <p class="mb-0">Are you sure you want to delete this workout plan? This action cannot be undone and will permanently remove all associated exercises.</p>
                    </div>

                    <div class="workout-plan-details">
                        <h4 class="mb-4 ">Workout Plan Details</h4>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="detail-card bg-light p-3 rounded-3 mb-3">
                                    <h5 ><i class="fas fa-info-circle me-2"></i>Basic Information</h5>
                                    <dl class="row">
                                        <dt class="col-sm-4">Name:</dt>
                                        <dd class="col-sm-8 fw-semibold">@Model.Name</dd>

                                        <dt class="col-sm-4">Description:</dt>
                                        <dd class="col-sm-8">@Model.Description</dd>

                                        <dt class="col-sm-4">Member:</dt>
                                        <dd class="col-sm-8">@Model.MemberName</dd>

                                        <dt class="col-sm-4">Trainer:</dt>
                                        <dd class="col-sm-8">@Model.TrainerName</dd>
                                    </dl>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="detail-card bg-light p-3 rounded-3 mb-3">
                                    <h5 ><i class="fas fa-calendar-alt me-2"></i>Schedule</h5>
                                    <dl class="row">
                                        <dt class="col-sm-4">Start Date:</dt>
                                        <dd class="col-sm-8">@Model.StartDate.ToString("MMM dd, yyyy")</dd>

                                        <dt class="col-sm-4">End Date:</dt>
                                        <dd class="col-sm-8">@Model.EndDate.ToString("MMM dd, yyyy")</dd>

                                        <dt class="col-sm-4">Duration:</dt>
                                        <dd class="col-sm-8">@((Model.EndDate - Model.StartDate).Days) days</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="detail-card bg-light p-3 rounded-3">
                                    <h5 ><i class="fas fa-file-alt me-2"></i>General Info</h5>
                                    <p>@(string.IsNullOrEmpty(Model.GeneralInfo) ? "No general information provided" : Model.GeneralInfo)</p>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="detail-card bg-light p-3 rounded-3">
                                    <h5 ><i class="fas fa-first-aid me-2"></i>Injury Info</h5>
                                    <p>@(string.IsNullOrEmpty(Model.InjuryInfo) ? "No injury information provided" : Model.InjuryInfo)</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" asp-route-id="@Model.MemberId" method="post">
                        <input type="hidden" asp-for="@Model.MemberId" />
                        <input type="hidden" asp-for="MemberId" />

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Trainer" asp-action="GetMemberWithWorkoutPlans" asp-route-id="@Model.MemberId"
                               class="btn btn-outline-secondary px-4">
                                <i class="fas fa-arrow-left me-2"></i>Back to Plans
                            </a>
                            <button type="submit" class="btn btn-danger px-4" id="deleteBtn">
                                <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .detail-card {
            height: 100%;
            transition: all 0.3s ease;
        }

            .detail-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
            }

        .card {
            border: none;
            overflow: hidden;
        }

        .rounded-3 {
            border-radius: 1rem !important;
        }

        .alert-danger {
            border-left: 4px solid #dc3545;
        }

        dt {
            font-weight: 500;
            color: #6c757d;
        }

        dd {
            margin-bottom: 0.5rem;
        }
    </style>
}

@section Scripts {
    <script>
        document.getElementById('deleteBtn').addEventListener('click', function(e) {
            if (!confirm('Are you absolutely sure you want to delete this workout plan and all its exercises?')) {
                e.preventDefault();
                return false;
            }

            this.disabled = true;
            this.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Deleting...';
        });
    </script>
}