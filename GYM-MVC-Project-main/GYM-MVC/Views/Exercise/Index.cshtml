@model IEnumerable<GYM_MVC.ViewModels.ExerciseViewModels.EditExerciseVM>

@{
    ViewData["Title"] = "Exercises";
    Layout = "~/Views/Shared/_TrainerLayout.cshtml";

    var workoutPlanId = ViewBag.WorkoutPlanId;
    
}

<div class="container-fluid px-4 py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary-dark text-white py-3">
                    <h2 class="h4 mb-0 text-center"><i class="fas fa-dumbbell me-2"></i>Exercises</h2>
                </div>

                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show mb-4">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-hover align-middle ">
                            <thead class="bg-white">
                                <tr>
                                    <th class="text-start ps-4">@Html.DisplayNameFor(model => model.Name)</th>
                                    <th class="text-center">@Html.DisplayNameFor(model => model.Repetitions)</th>
                                    <th class="text-center">@Html.DisplayNameFor(model => model.Sets)</th>
                                    <th class="text-center">@Html.DisplayNameFor(model => model.RestTime)</th>
                                    <th class="text-center">@Html.DisplayNameFor(model => model.DayOfWeek)</th>
                                    <th class="text-end pe-4">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="border-bottom">
                                        <td class="text-start ps-4 fw-semibold">@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td class="text-center">@Html.DisplayFor(modelItem => item.Repetitions)</td>
                                        <td class="text-center">@Html.DisplayFor(modelItem => item.Sets)</td>
                                        <td class="text-center">@Html.DisplayFor(modelItem => item.RestTime) sec</td>
                                        <td class="text-center">
                                            <span class="badge bg-primary">@Html.DisplayFor(modelItem => item.DayOfWeek)</span>
                                        </td>
                                        <td class="text-end pe-4">
                                            <div class="d-flex justify-content-end gap-2">
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-edit me-1"></i>Edit
                                                </a>
                                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirmDelete();">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                                        <i class="fas fa-trash-alt me-1"></i>Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }

                                @if (!Model.Any())
                                {
                                    <tr>
                                        <td colspan="6" class="text-center py-4">
                                            <div class="empty-state">
                                                <i class="fas fa-dumbbell fa-3x text-muted mb-3"></i>
                                                <h4 class="text-muted">No Exercises Found</h4>
                                                <p class="text-muted">Add exercises to create a complete workout plan</p>
                                                @* <a asp-action="Create" asp-route-workoutPlanId="@workoutPlanId" class="btn btn-primary-dark mt-3">
                                                    <i class="fas fa-plus me-2"></i>Add First Exercise
                                                </a> *@
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-controller="Trainer" asp-action="GetMemberWithWorkoutPlans" asp-route-id="@ViewBag.MemberId"
                           class="btn btn-outline-secondary px-4">
                            <i class="fas fa-arrow-left me-2"></i>Back to Plans
                        </a>
                        <div class="d-flex gap-3">
                            <a asp-action="Create" asp-route-workoutPlanId="@workoutPlanId" class="btn btn-primary-dark px-4">
                                <i class="fas fa-plus me-2"></i>Add Exercise
                            </a>
                            @if (Model.Any())
                            {
                                <a asp-controller="Trainer" asp-action="GetMemberWithWorkoutPlans" asp-route-id="@ViewBag.MemberId"
                                   class="btn btn-success px-4">
                                    <i class="fas fa-check-circle me-2"></i>Finish Plan
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this exercise? This action cannot be undone.");
        }

        $(document).ready(function() {
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);
        });
    </script>
}